package outLab2;

import java.lang.StringBuilder;


public class MSUclass {
	String title;
	int courseID;
	int seats;
	int sections;
	String days;
	String time;
	String location;
	boolean lecture;
	String[] data;
	String[] dayTime;
	
	public MSUclass(String line) {
		data = line.split(",");
		//System.out.println(data[15]);
//		for(String point:data) {
//			System.out.println(point);
//		}
	}
	
	
	public String getKey() {
		StringBuilder sb = new StringBuilder();
		days = data[15];
		location = data[16];
		dayTime = days.split(" ");
		days = dayTime[0];
		time = dayTime[1];
		sb.append(days);
		sb.append("-");
		sb.append(time);
		sb.append("-");
		sb.append(location);
		//System.out.println(sb.toString());
		return sb.toString();
	}
	
	public void IncrementSection() {
		
	}
	
	public void addSeats() {
		
	}
	
	public boolean isLecture() {
		while(!lecture) {
			for(int i=0;i<data.length;i++) {
				if(data[i].equals("Lecture")) {
					lecture = true;
					break;
				}
			}
		}
		return lecture;
	}
	
	public String toString() {
		StringBuilder SB = new StringBuilder();		
		return SB.toString();
	}
}

